# http://editorconfig.org

; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = 120
tab_width = 2
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
tab_width = 4

[Makefile]
indent_style = tab
